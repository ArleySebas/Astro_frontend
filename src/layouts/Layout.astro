---
import { ViewTransitions } from 'astro:transitions';

interface Props {
	title: string;
	bg : string;
}

const { title, bg } = Astro.props;
---


<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<ViewTransitions />
	</head>
	<body>
		<slot />
	</body>
</html>
<style is:global define:vars={{bg}}>
	:root {
		--accent: 136, 58, 234;
		--accent-light: 224, 204, 250;
		--accent-dark: 49, 10, 101;
		--accent-gradient: linear-gradient(
			45deg,
			rgb(var(--accent)),
			rgb(var(--accent-light)) 30%,
			white 60%
		);
	}
	html {
		font-family: system-ui, sans-serif;

		font-size: 62.5%;
		padding: 0;
		margin: 0;
	}

	* {
		margin: 0;
		padding: 0;
		font: inherit;
	}

	img {
		display: block; 
		max-width: 100%; 
		height: auto; 
		border: 0; 
	}

	a {
		text-decoration: none;
	}

	body {
		display: block;
		height: 100dvh;
		max-width: 100wv;

		background: repeating-linear-gradient(90deg, #42c8d1d7, #1c7e85);
		background: var(--bg);
		background-size: 100% 100%;
		background-repeat: no-repeat;

		overflow: hidden;
	}

	p {
		margin: 0;
		padding: 0;
		max-width: 75ch;
		text-wrap: balance;
	}
</style>
