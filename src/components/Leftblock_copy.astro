<section class="leftblock" role="presentation">
    <a class="leftblock_anchor" href="perfil" transition:name="imagen1">
        <p class="leftblock_p">Perfil</p>

        <img
            class="leftblock_img"
            src="caricaruta_objeto_inteligente.png"
            alt="Hoja de vida"
            
        />
        <p class="leftblock_p_2">
            Ingeniero biomédico con enfoque en automatización y control...
        </p>
    </a>
</section>

<style>
    .leftblock {
        grid-area: leftblock;

        display: grid;
        grid-template-columns: 1fr;
        grid-template-rows: 1fr;
        place-content: center;

        width: 100%;
        height: 100%;

        border-radius: 1rem;

        background-color: linear-gradient(180deg, skyblue), white;
        -webkit-backdrop-filter: blur(1rem);
        backdrop-filter: blur(1rem);
        border: 0.1rem;
        -webkit-box-shadow: 0px 0px 1rem 0.1rem rgba(0, 0, 0, 0.52);
        -moz-box-shadow: 0px 0px 1rem 0.1rem rgba(0, 0, 0, 0.52);
        box-shadow: 0px 0px 1rem 0.1rem rgba(0, 0, 0, 0.52);

        overflow: hidden;
        position: relative;
        z-index: 998;
    }
    .leftblock_anchor {
        display: grid;
        grid-template-columns: 1fr;
        grid-template-rows: 1fr 1fr;
    }
    .leftblock_p {
        grid-column: 1 / -1;
        grid-row: 1 / 2;
        align-self: center;
        text-align: center;

        font-weight: 900;
        font-size: clamp(1rem, 5vw + 0.5rem, 5rem);
        color: #effcfb;

        transition: opacity 0.3s ease;
        z-index: 998;
    }
    .leftblock_img {
        grid-column: 1 / -1;
        grid-row: 2 / 3;
        align-self: end;

        width: clamp(20rem, 25vw + 0.5rem, 90rem);
        height: clamp(20rem, 25vw + 0.5rem, 90rem);
        object-fit: cover;

        border-radius: 8%;
        padding: 1%;

        z-index: 1000;
        transition: all 0.3s ease;
        transition-delay: 0.3s;
    }
    .leftblock_p_2 {
        color: #d6f6f7;
        font-size: clamp(1rem, 2vw + 0.5rem, 5rem);
        font-weight: 800;
        text-align: center;
        animation: change2 1s normal forwards;
        -webkit-text-stroke: 0.1rem #11323b; 
        text-stroke: 0.1rem #11323b;
    }
    .leftblock:hover .leftblock_img {
        grid-column: 1 / 2;
        grid-row: 1 / 2;
        animation: change1 1s normal forwards;
    }
    .leftblock:hover .leftblock_p {
        opacity: 0;
    }

    @keyframes change1 {
        0% {
            opacity: 0;
            transform: scale(1);
        }
        100% {
            opacity: 1;
            transform: scale(0.7);
        }
    }
    @keyframes change2 {
        0% {
            opacity: 0;
            transform: scale(1);
        }
        100% {
            opacity: 1;
            transform: scale(0.9);
        }
    }

    @media (max-width: 800px) {
        .leftblock_anchor {
            grid-template-columns: 1fr 1fr;
            grid-row: 1fr;
        }
        .leftblock_p {
            grid-column: 1 / 2;
            grid-row: 1 / -1;
        }
        .leftblock_img {
            grid-column: 2 / 3;
            grid-row: 1 / -1;
            align-self: center;
        }
    }
</style>

<script is:inline>
    function inicializarTexto() {
        const texto = document.querySelector(".leftblock_p_2");
        const contenedor = document.querySelector(".leftblock");

        texto.style.display = "none";
        texto.style.opacity = 0;

        contenedor.addEventListener("mouseenter", () => {
            texto.style.display = "block";
            texto.style.opacity = 1;
        });

        contenedor.addEventListener("mouseleave", () => {
            texto.style.display = "none";
            texto.style.opacity = 0;
        });
    }
    inicializarTexto();
</script>
